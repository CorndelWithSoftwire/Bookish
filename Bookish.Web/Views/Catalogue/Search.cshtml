@model Bookish.Web.Models.CatalogueSearchViewModel

@{
  ViewBag.Title = "Catalogue Search";
}

<h2>Library Catalogue: Search for @Model.SearchCriteria.SearchText</h2>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Author(s)</th>
        <th>ISBN</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBN</td>
        </tr>
    }    
    </tbody>
</table>

<p />

<div>
    @if (Model.Page > 1)
    {
        @Html.ActionLink("Previous Page", "Index", new {page = Model.Page - 1}, null)
    }
    
    <b style="display:inline">Page @Model.Page of @Model.TotalPages</b>

    @if (Model.Page < Model.TotalPages)
    {
        @Html.ActionLink("Next Page", "Index", new {page = Model.Page + 1}, null)
    }
</div>
